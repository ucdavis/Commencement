<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Commencement.Core" namespace="Commencement.Core.Domain">
  <class name="SearchStudent">
    <id name="Id" column="Spriden_Id">
      <generator class="assigned"></generator>
    </id>

    <property name="Pidm" column="Spriden_Pidm" />
    <property name="FirstName" column="Spriden_First_Name" />
    <property name="LastName" column="Spriden_Last_Name" />

    <property name="HoursEarned" column="Shrlgpa_Hours_Earned" />
    <property name="Email" column="Goremal_Email_Address" />

    <property name="MajorCode" column="Zgvlcfs_Majr_Code" />
    <property name="CollegeCode" column="Zgvlcfs_Coll_Code" />
    <property name="DegreeCode" column="Shrdgmr_Degs_Code" />

    <property name="LoginId" column="loginid" />

    <property name="Astd" column="shrttrm_astd_code_end_of_term" />
    
    <loader query-ref="SearchStudents"/>
  </class>
  
  <sql-query name="SearchStudents">
    <return class="SearchStudent"></return>
    EXEC usp_SearchStudent :studentid, :term
  </sql-query>

  <sql-query name="SearchStudentByLogin">
    <return class="SearchStudent"></return>
    EXEC usp_SearchStudentByLogin :login, :term
  </sql-query>
  
</hibernate-mapping>