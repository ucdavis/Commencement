@model Commencement.Core.Domain.TermCode
@{
    ViewBag.Title = "UC Davis Commencement";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

@section AdditionalStyles
{
<style type="text/css">
    #footer {
        display: none;
        height: 0;
        margin-top: 0;
    }

    .main {
        padding-bottom: 0;
    }
</style>
}
<div class="pull-right">
    @Html.ActionLink("Visa Letters", "VisaLetters", "Student", null, htmlAttributes: new { @class = "btn btn-14 btn-yellow btn-sm" })
    @Html.Partial("_LogonPartial")
</div>

<div class="banner">
    <div class="banner_contents">
        <img src="@Url.Content("~/Images/Media/commencement_welcome.svg")" alt="">
    </div>    
</div>



@if (Model.CanRegister() || (bool) ViewBag.Registered)
{
    <div class="lead">
        <div class="lead_contents">
            <h3>Hi <b>@ViewBag.StudentName</b>
            </h3>
            @if (!(bool)ViewBag.Registered)
            {
                <p>Our records show that you may be <span class="sunny-grass"><b>eligible</b></span> for the @Model.GetNiceTermName() Commencement Ceremony.</p>                
                @Html.ActionLink("Register Now", "Index", "Student", null, htmlAttributes: new { @class = "btn btn-18 btn-green" })
            }
            else 
            {
                <p>Our records show that you have <span class="sunny-grass"><b>registered</b></span> for the Commencement Ceremony.</p>
                @Html.ActionLink("Continue", "Index", "Student", null, htmlAttributes: new { @class = "btn btn-18 btn-green" })
            }
        </div>
    </div>
}
<div class="main">
    <div class="main_contents">
        <h1>Information</h1>
        <div class="instructions">
            @Html.Raw(Model.LandingText)
            
            
        </div>
        <div class="instructions"></div>
        <hr />
        <p><i>After @Model.RegistrationDeadline.ToString("MMMM d") we will accept late registrations but due to printing deadlines we cannot guarantee your name will appear in the program or that you will receive the maximum number of tickets allotted per person </i></p>
        </div>
</div>


